<h2 class="mb-4">İş ekle</h2>

<form class="row g-3" method="post">
    <div class="mb-3">
        <label class="form-label">İşin başlığı</label>
        <input required type="text" class="form-control" name="job">
    </div>
    <div class="mb-3">
        <label class="form-label">Atanan kişi</label>
        <input required type="text" class="form-control" name="atanankisi">
    </div>
    <div class="mb-3">
        <label class="form-label">Detay</label>
        <textarea required class="form-control" name="detail"></textarea>
    </div>
    <button class="btn btn-success">Ekle</button>
</form>
<div class="alert @ViewBag.MessageCssClass" role="alert">
    @ViewBag.Message
</div>